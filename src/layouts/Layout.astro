---
import '../styles/global.css';
import Header from '../components/Header.astro';
import '@fontsource-variable/onest';
import Badge from '../components/Badge.astro';
import Footer from '../components/Footer.astro';
const { title = 'Portfolio Sebastián Villalobos - software developer', description = 'Portfolio de Sebastián Villalobos, estudiante de Técnico Universitario en Informática en la Universidad Técnica Federico Santa María. Aquí encontrarás mi información relevante como desarrollador de software.' } = Astro.props;
---



<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="px-4">
		<div class="fixed inset-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,#4A0006,rgba(255,255,255,0))]"></div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html{
		font-family: 'Onest Variable',system-ui ,sans-serif;
		scroll-behavior: smooth;
	}
	body{
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;
		
	}

	@media(prefers-reduced-motion){
		html, body {
			scroll-behavior: auto;
		}
	}
</style>
